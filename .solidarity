{
  "$schema": "http://json.schemastore.org/solidaritySchema",
  "config" : {
    "output" : "moderate"
  },
  "requirements": {
    "Node": [
      {
        "rule": "cli",
        "binary": "node",
        "semver": ">=16.0.0",
        "error": "install node using nvm https://github.com/nvm-sh/nvm#installing-and-updating"
      },
      {
        "rule": "cli",
        "binary": "npm",
        "semver": ">=8.5.5 <9.0.0",
        "error": "install npm 8.5.5 `npm i -g npm@8.5.5"
      }
    ],
    "Android": [
      {
        "rule": "cli",
        "binary": "emulator"
      },
      {
        "rule": "cli",
        "binary": "android"
      },
      {
        "rule": "env",
        "variable": "ANDROID_HOME",
        "error": "The ANDROID_HOME environment variable must be set to your local SDK.  Refer to getting started docs for help."
      }
    ],
    "iOS": [
      {
        "rule": "cli",
        "binary": "watchman",
        "error": "install watchman `brew install watchman`",
        "platform": "darwin"
      },
      {
        "rule": "cli",
        "binary": "xcodebuild",
        "semver": ">=13.0",
        "error": "install xcode",
        "platform": "darwin"
      },
      {
        "rule": "cli",
        "binary": "ruby",
        "semver": ">=2.7.1 <3.0.0",
        "error": "visit rvm install https://rvm.io/rvm/install",
        "platform": "darwin"
      },
      {
        "rule": "cli",
        "binary": "pod",
        "semver": "1.11.3",
        "platform": "darwin"
      }
    ],
    "Git email": [
      {
        "rule": "shell",
        "command": "git config user.email",
        "match": ".+@.+"
      }
    ]
  }
}
